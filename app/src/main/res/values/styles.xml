<resources>
    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="BtnOrange">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:background">@color/custom_orange</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">BtnClick</item>
    </style>
    <style name="BtnCapstone">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:background">@color/custom_capred</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">BtnClick</item>
    </style>
    <color name="custom_orange">#FF9933</color>
    <color name="custom_capred">#FF1919</color>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

</resources>
